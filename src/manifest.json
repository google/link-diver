{
    "name": "Link Diver",
    "version": "1.3",
    "description": "Link Diver is a feature-rich tool that allows you to view all of the links on a webpage.",
    "manifest_version": 2,
    "browser_action": {},
    "background" : {
        "scripts": ["assets/background.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["assets/content.js", "assets/highlight-links.js"],
            "css": ["assets/highlight.css"]
        }
    ],
    "permissions": ["activeTab", "contextMenus", "downloads", "storage"]
}
